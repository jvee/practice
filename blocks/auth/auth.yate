match .* auth {
	// TODO check user.state
	<div class="auth">
		@style = (
			'float: right;'
			'margin-top: -70px;'
		)

		if (!.user.id) {
			<a href="/auth/login">Вход</a><br />
			<a href="/auth/signup">Регистрация</a><br /> 	
		} else {
			<span>{ .user.login }</span><br />
			<a href="/auth/logout">Выход</a>
		}
		
	</div>
}